@charset "utf-8";
/* CSS Document */
#useper{
	position:absolute;
	top:15px;
	right:25px;
	z-index:3;
	display:none;
	}
#viewbox{
	
	position:relative;
	margin:0 auto;
	width:1366px;
}
#menubox{
	position:absolute;
	top:15px;
	left:15px;
}
.backgroundimg{
	float:left;
	position:relative;
	z-index:0;
	}
.roomdiv{}
		.roomdiv img{
			position:absolute;
		}
		.roomimg{
			z-index:1;
		}
		.roomtitle{
			position:absolute;
			background-color:#FF0100;
			color:#FFF;
			padding:4px;
			padding-left:12px;
			padding-right:12px;
			font-size:22px;
			font-weight:bold;
			z-index:4;
		}
		.roomtext{
			z-index:0;
			position:absolute;
			color:#FFF;
			background-color:#F60;
			padding-left:2em;
			padding-right:2em;
			left: 670px !important;
		}
		.sh{
			display:block;
			z-index:5;	
		}
		.hi{
			display:none;
		}
#buttonbox{
	z-index:6;
	width:210px;
}
.title{
	background-color:#F60;
	color:#FFF;
	font-size:30px;
	padding:5px;
}

#buttonbox a{
	color:#3a56a0;
	text-decoration:none;
}
a:hover{
	background-color:#4478ff;
	color:#FFF;
	}
